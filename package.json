{
  "private": true,
  "name": "@gjbkz/360image",
  "type": "module",
  "scripts": {
    "lint": "eslint src build",
    "test": "run-s test:*",
    "test:type": "tsc --noEmit",
    "test:exif": "node --experimental-loader ./loader.mjs src/util/readExif.test.mts",
    "build": "run-s build:*",
    "build:main": "node --experimental-loader ./loader.mjs build/main.mts",
    "start": "run-p start:*",
    "start:watch": "node --experimental-loader ./loader.mjs build/main.mts --watch",
    "start:server": "sable docs",
    "postversion": "run-s postversion:*",
    "postversion:changelog": "npx @nlib/changelog -- --output CHANGELOG.md",
    "postversion:add": "git add .",
    "postversion:commit": "git commit --amend --no-edit"
  },
  "devDependencies": {
    "@material-design-icons/svg": "^0.14.11",
    "@nlib/githooks": "^0.2.0",
    "@nlib/typing": "^1.0.0",
    "@types/node": "^20.5.4",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "esbuild": "^0.19.2",
    "eslint": "^8.47.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "lint-staged": "^14.0.1",
    "npm-run-all": "^4.1.5",
    "pannellum": "^2.5.6",
    "prettier": "^3.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recoil": "^0.7.7",
    "sable": "^0.5.14",
    "sass": "^1.66.1",
    "styled-components": "^6.0.7",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "**/*.*(m|c)+(j|t)s*(x)": "eslint"
  },
  "renovate": {
    "extends": [
      "github>nlibjs/renovate-config"
    ]
  }
}
